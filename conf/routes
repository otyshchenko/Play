# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /index                 controllers.Application.index
GET        /angular               controllers.AngularController.index
GET        /angular/status        controllers.AngularController.getStatus()
GET        /login                 controllers.AngularController.login
GET        /pack                  controllers.ProductsController.getProductsPage

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file          controllers.Assets.at(path="/public", file)

    